<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context-4.3.xsd">




	<context:component-scan
		base-package="com.nit.dao"></context:component-scan>


	<!--creating spring bean for HikariDS -->
	<bean id="hkds" class="com.zaxxer.hikari.HikariDataSource">
		<property name="driverClassName"
			value="com.mysql.jdbc.Driver"></property>
		<property name="jdbcUrl"
			value="jdbc:mysql://localhost:3306/practice"></property>
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>
	</bean>


	<!-- creating spring bean for SimpleJdbcCall -->
	<bean id="sjc"
		class="org.springframework.jdbc.core.simple.SimpleJdbcCall">
		<constructor-arg name="dataSource" ref="hkds"></constructor-arg>
	</bean>

</beans>
